<h1 class= "text-center">Pick the dates</h1>

<div class="form-wrapper d-flex justify-content-around" >

    <%= simple_form_for([@surfboard, @booking]) do|f| %>
    <%= f.input :start_date, as: :date, label: "From:", wrapper_html: { class: "inline_field_wrapper" } %>
    <%= f.input :end_date, as: :date, label: "To:".html_safe, wrapper_html: { class: "inline_field_wrapper" } %>

    <%#= link_to 'Cancel', surfboard_path(@surfboard_id), class: "black-btn justify-content-center"'btn btn-outline-secondary' %>
    <%= f.submit "BOOK !!!", class: "black-btn justify-content-center" %>
    <% end %>
</div>
