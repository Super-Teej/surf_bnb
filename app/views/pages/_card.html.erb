<div class="card">
<%= link_to surfboard_path(surfboard) do %>
  <% @surfboards.each do |surfboard| %>
    <% if surfboard.photo.attached? %>
      <div class="card-img" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path surfboard.photo.key, height: 400, width: 200, crop: :fill %>')">
      </div>
    <% else %>
     <div class="card-img">
        <%= image_tag "ART00050817001.jpg", alt: "surfboard", width: 200 %>
      </div>
    <% end %>
  <% end %>
  <div class="card-bottom">
    <h4><b>Awesome Board</b></h4> 
    <p>Board for pros.</p> 
  </div>
</div>
<% end %>